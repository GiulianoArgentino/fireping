{% extends 'base.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-sm-3 col-md-2 sidebar" style="padding:0px;">
        {% include 'menu/menu.html.twig' %}
    </div>
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        <h1 class="page-header">{{ domain.name }}</h1>

        {% for device in domain.devices %}
            <h4>{{ device.name }} - {{ device.ip }}</h4>
            <a href="{{ path('app_device_get', {id: device.id}) }}"><img src="{{ path('app_graph_summary', {id: device.id}) }}" /></a><br/>
        {% endfor %}
    </div>
</div>
{% endblock %}