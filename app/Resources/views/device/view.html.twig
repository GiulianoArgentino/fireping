{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-sm-3 col-md-2 sidebar">
            {% include 'menu/menu.html.twig' %}
        </div>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
            <h1 class="page-header">{{ device.name }}</h1>

            {% for probe in device.getAllProbes() %}
                <img src="{{ path('app_graph_detail', {device_id: device.id, probe_id: probe.id, start:-7200 }) }}" /><br/>
                <img src="{{ path('app_graph_detail', {device_id: device.id, probe_id: probe.id, start:-86400 }) }}" /><br/>
                <img src="{{ path('app_graph_detail', {device_id: device.id, probe_id: probe.id, start:-2678400 }) }}" /><br/>
            {% endfor %}
        </div>
    </div>
{% endblock %}