{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-sm-3 col-md-2 sidebar">
            {% include 'menu/menu.html.twig' %}
        </div>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
            <h1 class="page-header">{{ device.name }}</h1>

            {% for probe in device.getAllProbes() %}
                <img src="{{ path('app_graph_detail', {id: device.id, probe: probe.id}) }}" /><br/>
            {% endfor %}
        </div>
    </div>
{% endblock %}