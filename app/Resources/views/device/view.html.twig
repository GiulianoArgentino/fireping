{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-sm-3 col-md-2 sidebar">
            {% include 'menu/menu.html.twig' %}
        </div>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
            <h1 class="page-header">{{ device.name }} - {{ device.ip }}</h1>

            {% for probe in device.getAllProbes() %}
                <h4>{{ probe.name }}</h4>
                {% for slavegroup in device.getAllSlaveGroups() %}
                    <img src="{{ path('app_graph_detail', {device_id: device.id, probe_id: probe.id, slavegroup_id: slavegroup.id, start:-10800 }) }}" /><br/><br/>
                {% endfor %}
                {% for slavegroup in device.getAllSlaveGroups() %}
                    <img src="{{ path('app_graph_detail', {device_id: device.id, probe_id: probe.id, slavegroup_id: slavegroup.id, start:-108000 }) }}" /><br/><br/>
                {% endfor %}
                {% for slavegroup in device.getAllSlaveGroups() %}
                    <img src="{{ path('app_graph_detail', {device_id: device.id, probe_id: probe.id, slavegroup_id: slavegroup.id, start:-864000 }) }}" /><br/><br/>
                {% endfor %}
                {% for slavegroup in device.getAllSlaveGroups() %}
                    <img src="{{ path('app_graph_detail', {device_id: device.id, probe_id: probe.id, slavegroup_id: slavegroup.id, start:-34560000 }) }}" /><br/><br/>
                {% endfor %}
            {% endfor %}
        </div>
    </div>
{% endblock %}